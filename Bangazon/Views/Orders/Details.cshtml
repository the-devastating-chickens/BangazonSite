@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            Date Completed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            Payment Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            Order Total
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.OrderTotal)
        </dd>
        <dt class="col-sm-2">
            Products Ordered
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.OrderProducts)
            {
                <div>
                    @item.Product.Title $@item.Product.Price
                    <hr />
                </div>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
