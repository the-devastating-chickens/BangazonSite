@model Bangazon.Models.Order

@{
    ViewData["Title"] = "ClearCart";
}

<h1>Confirm</h1>

<h3>Are you sure you want to clear this shopping cart?</h3>
<hr/>
<div>
    <h4>My Cart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderProducts)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.OrderProducts)
            {


                <div>
                    @item.Product.Title $@item.Product.Price
                    <hr />
                </div>

            }
        </dd>
    </dl>
    
    <form asp-action="ClearCartConfirmed" asp-route-id=@Model.OrderId>
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Confirm" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
